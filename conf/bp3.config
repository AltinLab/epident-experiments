profiles {
    gemini {
        params {
            bp3_torch_home =  "/tgen_labs/altin/torch"
            bp3_esm_dir = "/tgen_labs/altin/esm_encodings"
        }
    
        process {
            withLabel: bp3_inference {
                executor = 'slurm'
                queue = 'gpu-v100'
                cpus = '8'
                memory = '64GB'
                clusterOptions = '--nodes=1 --ntasks=1 --gres=gpu:1 --time=2-00:00:00'
                conda = "envs/bp3.yaml"
            }
        }
    }
}
